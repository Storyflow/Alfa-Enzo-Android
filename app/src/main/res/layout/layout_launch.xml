<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/yellowMain"
             xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/launch_circle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/white_circle"
        tools:layout_width="140dp"
        tools:layout_height="140dp"
        />

    <TextView
        android:id="@+id/launch_text_view"
        android:text="@string/app_first_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/testSizeXXXL"
        android:textColor="@color/yellowMain"
        />

</FrameLayout>