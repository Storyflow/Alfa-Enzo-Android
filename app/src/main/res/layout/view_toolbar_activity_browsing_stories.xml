<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              tools:background="@color/white">

    <ImageView
        android:id="@+id/view_toolbar_up"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_up"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        />


    <com.thirdandloom.storyflow.views.RoundSquareImageView
        android:id="@+id/toolbar_activity_browsing_stories_avatar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:paddingTop="@dimen/sizeSmall"
        android:paddingRight="@dimen/sizeSmall"
        android:paddingBottom="@dimen/sizeSmall"
        />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar_activity_browsing_stories_full_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/greyDarkName"
            android:textAppearance="@style/TextAppearance.RoboMediumNormal"
            tools:text="Full name"
            />
        <TextView
            android:id="@+id/toolbar_activity_browsing_stories_user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="@color/greyDarkSubName"
            android:textAppearance="@style/TextAppearance.RoboMediumTiny"
            tools:text="\@User"
            />
    </LinearLayout>

    <View android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/toolbar_activity_browsing_stories_increase_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_view_1"
        android:layout_gravity="center"
        android:scaleType="center"
        android:padding="@dimen/sizeSmall"
        />

    <ImageView
        android:id="@+id/toolbar_activity_browsing_stories_change_period"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_filter_time"
        android:layout_gravity="center"
        android:scaleType="center"
        android:padding="@dimen/sizeSmall"
        />

    <ImageView
        android:id="@+id/toolbar_activity_browsing_stories_plus_stories_chooser"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_filter_options_"
        android:layout_gravity="center"
        android:scaleType="center"
        android:padding="@dimen/sizeSmall"
        />

</LinearLayout>