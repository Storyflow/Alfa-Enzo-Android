<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/view_tab_bar_flip_circles_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp">

        <com.thirdandloom.storyflow.views.RoundSquareImageView
            android:id="@+id/view_tab_bar_flippable_circle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_white_stroke_circle"/>

        <ImageView
            android:id="@+id/view_tab_bar_triangle_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:scaleType="center"
            android:background="@drawable/shape_radial_black_gradient"
            android:src="@drawable/arrow_home"
        />

    </FrameLayout>

</FrameLayout>