<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/location"
              android:gravity="center|left"
              android:layout_weight="1"
              android:paddingTop="@dimen/sizeSmall"
              android:paddingBottom="@dimen/sizeSmall"
              android:paddingRight="@dimen/sizeSmall"        />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_post_story_bar_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gallery"
            android:paddingTop="@dimen/sizeSmall"
            android:paddingBottom="@dimen/sizeSmall"
            android:paddingRight="@dimen/sizeNormal"
            android:paddingLeft="@dimen/sizeNormal"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/view_post_story_bar_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:paddingTop="@dimen/sizeSmall"
            android:paddingBottom="@dimen/sizeSmall"
            android:paddingRight="@dimen/sizeNormal"
            android:paddingLeft="@dimen/sizeNormal"
            android:layout_gravity="center"
            />

        <View android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
            />

        <TextView
            android:id="@+id/view_post_story_bar_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_story_button"
            android:gravity="center|right"
            android:paddingTop="@dimen/sizeSmall"
            android:paddingBottom="@dimen/sizeSmall"
            android:paddingLeft="@dimen/sizeSmall"
            />

    </LinearLayout>

</merge>