<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:windowBackground">@color/yellow</item>

        <item name="colorControlNormal">@color/greyLight</item>
        <item name="colorControlActivated">@color/yellow</item>

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="GreyProgressBar">
        <item name="colorControlActivated">@color/grey</item>
    </style>

    <style name="NoTitleWhite" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/buttonSizeNormal</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:layout_marginLeft">@dimen/buttonMarging</item>
        <item name="android:layout_marginRight">@dimen/buttonMarging</item>
    </style>

    <style name="DarkGreyButton" parent="Button" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_button_rounded_darkgrey</item>
    </style>

    <style name="LightGreyOvalEditText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">@dimen/sizeXNormal</item>
        <item name="android:background">@drawable/shape_light_grey</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

</resources>
