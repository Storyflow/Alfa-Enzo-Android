<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:windowBackground">@color/yellow</item>

        <item name="colorControlNormal">@color/greyLight</item>
        <item name="colorControlActivated">@color/yellow</item>

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="GreyLineStrokedEditText">
        <item name="colorControlActivated">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/divider_grey_light</item>
    </style>

    <style name="GreyProgressBar">
        <item name="colorControlActivated">@color/grey</item>
    </style>

    <style name="YellowProgressBar">
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="NoTitleWhite" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/buttonSizeNormal</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:layout_marginLeft">@dimen/buttonMargin</item>
        <item name="android:layout_marginRight">@dimen/buttonMargin</item>
    </style>

    <style name="DarkGreyButton" parent="Button" >
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_button_rounded_grey</item>
        <item name="android:textAppearance">@style/TextAppearance.FontMediumSmallTextSize</item>
    </style>

    <style name="LightGreyOvalEditText" parent="GreyLineStrokedEditText">
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">@dimen/sizeMedium</item>
        <item name="android:paddingBottom">@dimen/sizeMedium</item>
        <item name="android:background">@drawable/selector_oval_edit_text</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/greyLightDark</item>
        <item name="android:textColorHint">@drawable/selector_grey_lighter_text</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ClearBackgroundEditText" parent="GreyLineStrokedEditText">
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">@dimen/sizeMedium</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/greyLightDark</item>
        <item name="android:textColorHint">@drawable/selector_grey_lighter_text</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center|bottom</item>
    </style>




    <style name="TextAppearance.FontHeavyNormalTextSize" parent="android:TextAppearance">
        <item name="fontPath">AvenirLTStd-Heavy.ttf</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="TextAppearance.FontMediumTinyTextSize" parent="android:TextAppearance">
        <item name="fontPath">AvenirLTStd-Medium.ttf</item>
        <item name="android:textSize">@dimen/textSizeTiny</item>
    </style>

    <style name="TextAppearance.FontMediumSmallTextSize" parent="android:TextAppearance">
        <item name="fontPath">AvenirLTStd-Medium.ttf</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="TextAppearance.FontLightSmallTextSize" parent="android:TextAppearance">
        <item name="fontPath">AvenirLTStd-Light.ttf</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="TextAppearance.FontLightTinyTextSize" parent="android:TextAppearance">
        <item name="fontPath">AvenirLTStd-Light.ttf</item>
        <item name="android:textSize">@dimen/textSizeTiny</item>
    </style>

</resources>
